<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<h2>Comentários</h2>
<div id="comments">
  <%= render partial: @post.comments %>
</div>

<%= simple_form_for [@post, Comment.new] do |f| %>
  <%= f.label :body, "Novo comentário" %>
  <%= f.input :body %>
  <%= f.submit "Adicionar comentário" %>
<% end %>
